<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grant.employeeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewAllEmployee"
            android:label="@string/title_activity_view_all_employee"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewEmployee"
            android:label="@string/title_activity_view_employee"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddEmployee"
            android:label="@string/title_activity_add_employee"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditEmployee"
            android:label="@string/title_activity_edit_employee"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
